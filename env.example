# 微信配置
# 请从微信公众平台获取真实的 AppID 和 AppSecret
WECHAT_APP_ID=your_app_id_here
WECHAT_APP_SECRET=your_app_secret_here
WECHAT_REDIRECT_URI=http://localhost:5000/wechat/callback

# Flask配置
# 请使用强随机字符串作为密钥
FLASK_SECRET_KEY=your_secret_key_here_change_this_in_production
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_PORT=5000

# 数据库配置（可选）
DATABASE_URL=sqlite:///data/app.db

# 邮件服务配置
# SMTP服务器配置（网易126邮箱示例）
SMTP_SERVER=smtp.126.com
SMTP_PORT=587
SMTP_USER=your_email@126.com
SMTP_PASSWORD=your_email_password_here
SENDER_EMAIL=your_email@126.com

# 邮件收件人（多个邮箱用逗号分隔）
EMAIL_RECIPIENTS=admin@hospital.com,manager@hospital.com

# 生产环境配置
# 生产环境请修改以下配置
PRODUCTION_HOST=0.0.0.0
PRODUCTION_PORT=80
